             />&ndash;&gt;
     </android.support.design.widget.AppBarLayout>-->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/border_style"
        android:layout_weight="1.5">
        <!-- <TextView
                    android:id="@+id/grade_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Grade: 4th"
                    android:textSize="36sp"
                    android:layout_weight="1"/>-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1">

            <TextView
                android:id="@+id/grade_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Grade 4"
                android:textSize="36sp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical|left" />

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Smart Kid"
                android:textSize="36sp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!--<View
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:background="#ffffff" android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />-->

        <!-- <View
             android:layout_width="3dp"
             android:layout_height="80dp"
             android:background="#ffffff" android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mqT4T"

            android:src="@drawable/test4timelogo"


            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <AnalogClock
                android:id="@+id/analog_timer"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/time_display"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0 minutes"
                android:textSize="22sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>
    <!--android:layout_height="wrap_content"-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">
            <Space
                android:layout_width="48sp"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                />
            <TextView
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="48sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_vertical"
                android:text="+"
                android:textSize="48sp" android:paddingRight="15dp" />
            <TextView
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_vertical"
                android:text="000"
                android:textSize="48sp"
                android:paddingRight="15dp" android:paddingLeft="20dp" />
        </LinearLayout>
        <!--<TextView
            android:layout_width="76dp"
            android:layout_height="15dp"
            android:text="____________"
            android:textSize="4s"
            android:layout_gravity="center_horizontal"/>-->
        <View
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:background="#ffffff" android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="3"
            android:background="@drawable/border_style"
            android:minLines="1"
            android:maxLength="3"
            android:textSize="48sp"
            android:gravity="right"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
        <!--<EditText
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:background="@drawable/border_style"
                android:minLines="1"
                android:maxLength="3"
                android:textSize="48sp" android:width="140dp"
                android:gravity="right"
                android:layout_gravity="center_horizontal" android:layout_marginTop="15dp"/>-->
    </LinearLayout>

    <!--<Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp">
    </Space>-->
    <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">
    </LinearLayout>-->
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/submitText"
        android:layout_gravity="center" android:textSize="32sp"
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/border_style"/>

    <!-- Layout for the "numpad" to type in answers -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center_horizontal">
        <!--android:background="@drawable/border_style">-->

        <!-- TODO: Change to Image Buttons? -->
        <!-- TODO: Add a backspace button -->

        <!-- 3 columns -->
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="2dp" >

            <Button
                android:id="@+id/key_1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="1" />

            <Button
                android:id="@+id/key_2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="2" />

            <Button
                android:id="@+id/key_3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="3" />
        </TableRow>

        <!-- 3 columns -->
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="2dp" >

            <Button
                android:id="@+id/key_4"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="4" />

            <Button
                android:id="@+id/key_5"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="5" />

            <Button
                android:id="@+id/key_6"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="6" />
        </TableRow>

        <!-- 3 columns -->
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="2dp" >

            <Button
                android:id="@+id/key_7"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="7" />

            <Button
                android:id="@+id/key_8"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="8" />

            <Button
                android:id="@+id/key_9"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="9" />

        </TableRow>

        <!-- 3 columns -->
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="2dp" >

            <Button
                android:id="@+id/key_minus"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="-" />

            <Button
                android:id="@+id/key_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="0" />

            <Button
                android:id="@+id/key_back"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="48sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/backspace_string" />
        </TableRow>

    </TableLayout>

</LinearLayout>
