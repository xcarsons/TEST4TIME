<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:gravity="center_vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center" android:gravity="center_horizontal"
            android:weightSum="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:id="@+id/emailText" android:textSize="20dp" android:textColor="#ffffff"
                android:layout_marginTop="50dp"/>
        <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:background="@drawable/round_tb" android:id="@+id/emailTb" android:textColor="#000000"
                android:gravity="center_horizontal"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PASSWORD"
                  android:id="@+id/passwordText" android:textSize="20dp" android:textColor="#ffffff"
                  android:layout_marginTop="10dp"/>
        <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:background="@drawable/round_tb" android:id="@+id/passwordTb" android:textColor="#000000"
                android:password="true" android:gravity="center_horizontal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:id="@+id/loginBtn" android:layout_gravity="center_horizontal" android:width="125dp"
                android:layout_marginTop="25dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:id="@+id/signupBtn" android:layout_gravity="center_horizontal" android:width="125dp"
                android:layout_marginTop="25dp"/>
    </LinearLayout>
</LinearLayout>