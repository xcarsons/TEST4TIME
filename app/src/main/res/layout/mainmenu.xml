<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard_dark2"
    android:alpha ="255"
    android:weightSum="1"
    android:visibility="visible">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/settingsBtn"
        android:layout_gravity="right|top" />
    <!--android:text="Settings"-->

    <!--android:background="@drawable/settingsbutton_32dp_b"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Users"
        android:id="@+id/UsersText"
        android:contentDescription="Users"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#fdfafa"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp">

        <ListView
            android:id="@+id/userList"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:isScrollContainer="false"
            android:dividerHeight="20dp"
            android:divider="@null"
            android:background="@null"
            android:textAlignment="center"
            android:gravity = "center_horizontal"
            >

        </ListView>


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="256dp"
            android:id="@+id/T4TLogo"

            android:src="@drawable/test4timelogo"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:alpha=".75"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reinvent the Teachable Moment"
            android:layout_gravity="center|bottom"
            android:textSize="32dp"/>
    </LinearLayout>


</LinearLayout>