<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard_dark2"
    android:alpha ="255"
    android:weightSum="1"
    android:visibility="visible">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:rotation = "0"
        android:text = "Settings"
        android:id="@+id/settingsBtn"
        android:layout_gravity="right|top"
        android:longClickable="false"
        android:src="@drawable/eraser"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:clickable="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Users"
        android:id="@+id/UsersText"
        android:contentDescription="Users"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#fdfafa"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:rotation="180"
            android:id="@+id/pencil2"
            android:src="@drawable/penciledit"
            android:background="@null"
            android:scaleType="centerCrop"
            android:paddingLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:rotation="180"
            android:id="@+id/pencil"
            android:src="@drawable/penciledit"
            android:layout_gravity="center_horizontal|left"
            android:background="@null"
            android:scaleType="centerCrop"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:contextClickable="false"
            android:clickable="true"
            android:nestedScrollingEnabled="true" />

        <ListView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/userList"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/pencil"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/pencil2"
            android:clickable="true"
            android:contextClickable="true">
    </ListView>
    </RelativeLayout>


</LinearLayout>
